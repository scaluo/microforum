<div class="postsbox">
  <div class="postsinfo"><%=t(:posted_by)%> <%= reply.user.username %> <%=t(:posted_on)%> <%=reply.created_at.to_date%></div>
  <div class="postscontent"><%= simple_format reply.content %></div>
  <%if user_signed_in? && current_user==reply.user%>
  <div class="postsfoot">
     <%= link_to t(:delete), [reply.topic,reply],:method=>:delete,:confirm=>t(:delete_confirm)%>
  </div>
  <% end %>
</div>