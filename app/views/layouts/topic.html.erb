<!DOCTYPE html>
<html>
<head>
  <title><%=render :partial=>'share/title' %></title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="wrap">
  <div id="brand">
    <div id="logo"><%=t(:logo)%></div>
    <div id="topnav">
      <%=render :partial=>'share/nav' %>

     </div>
  </div>
  <div id="content">

    <%=render :partial=>'share/notice' %>
    <%= yield %>
  </div>
   <div id="nav">
      <div class="navblock">
      <%if @categories -%>
      <ul>
        <li><%=link_to 'All',topics_path %></li>
        <%=render :partial =>'categories/category',:collection=>@categories %>
      </ul>
      <% end -%>
      </div>
  </div>
   <div id="footer"><hr/><%=render :partial=>'share/foot'%></div>
</div>
</body>
</html>
